<% if user_signed_in? %>
  <%= link_to 'Fazer logoff', destroy_user_session_path, method: :delete %>
<%end  %>
<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Cpf cpnpj</th>
      <th>Razao social</th>
      <th>Ramo atividade</th>
      <th>Insc estadual</th>
      <th>Insc municipal</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th>Em uso</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.cpf_cpnpj %></td>
        <td><%= empresa.razao_social %></td>
        <td><%= empresa.ramo_atividade %></td>
        <td><%= empresa.insc_estadual %></td>
        <td><%= empresa.insc_municipal %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.celular %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.em_uso %></td>
        <td><%= empresa.user_id %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

